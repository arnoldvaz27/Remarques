<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_miscellaneous"
    android:orientation="vertical"
    android:id="@+id/layoutRecording"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

    <TextView
        android:id="@+id/textMiscellaneous"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.9"
        android:layout_marginTop="@dimen/_17sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="Recorder"
        android:textColor="@color/colorDelete"
        android:textSize="@dimen/_18ssp" />

    <ImageView
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:src="@drawable/cancel_settings"
        android:id="@+id/cancelRecorder"
        />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_20sdp">

        <TextView
            android:id="@+id/txtRecStatus"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


        <Chronometer
            android:id="@+id/timeRec"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/btnRec"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="center"
            android:layout_margin="15dp"
            android:background="@drawable/round_btn"
            android:src="@drawable/ic_record"
            android:contentDescription="TODO"  />
    </LinearLayout>


</LinearLayout>